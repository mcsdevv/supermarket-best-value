{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node scripts/update-manifest-version.mjs ${nextRelease.version} && bun run build:prod && cd dist && zip -r ../supermarket-unit-value.zip ."
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["manifest.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "supermarket-unit-value.zip",
            "label": "supermarket-unit-value-v${nextRelease.version}.zip"
          }
        ]
      }
    ]
  ]
}
